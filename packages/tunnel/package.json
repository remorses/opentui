{
  "name": "@opentui/tunnel",
  "version": "0.1.0",
  "description": "WebSocket tunnel for exposing OpenTUI apps via public URLs",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./cloudflare": {
      "types": "./cloudflare/src/index.ts",
      "import": "./cloudflare/src/index.ts"
    }
  },
  "files": [
    "src",
    "cloudflare"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "bun build ./cloudflare/client/index.html --outdir ./cloudflare/public",
    "deploy": "bun run build && wrangler deploy"
  },
  "dependencies": {
    "@opentui/web": "workspace:*",
    "ulid": "^3.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250712.0",
    "@types/bun": "^1.3.5",
    "typescript": "^5.0.0",
    "wrangler": "^4.54.0"
  },
  "peerDependencies": {
    "@opentui/core": "workspace:*"
  }
}
