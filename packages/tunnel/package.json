{
  "name": "@opentui/tunnel",
  "version": "0.1.0",
  "description": "Cloudflare Worker for serving OpenTUI web client",
  "type": "module",
  "exports": {
    "./cloudflare": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "files": [
    "src",
    "client"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "bun build ./client/index.html --outdir ./public",
    "deploy": "bun run build && wrangler deploy"
  },
  "dependencies": {
    "@opentui/web": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250712.0",
    "@types/bun": "^1.3.5",
    "typescript": "^5.0.0",
    "wrangler": "^4.54.0"
  }
}
